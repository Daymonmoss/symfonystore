{% extends 'base.html.twig' %}

{% block title %}Hello Controller!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>You are in {{ controller_name }} now! âœ…</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code><a href="{{ 'F:/OpenServer/domains/symphony.store/src/Controller/Controller.php'|file_link(0) }}">src/Controller/Controller.php</a></code></li>
        <li>Your template at <code><a href="{{ 'F:/OpenServer/domains/symphony.store/templates//index.html.twig'|file_link(0) }}">templates//index.html.twig</a></code></li>
    </ul>
</div>

    <div class="album py-5 bg-light">
        <div class="container">

            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                {% set sum = 0 %}
                {% for item in items %}
                    <div class="col">
                        <a href="{{ path('storeItem', {'id':item.id}) }}" class="text-decoration-none">
                            <div class="card shadow-sm">
                                <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
                                    <title>{{ item.StoreItem.title }}</title>
                                    <rect width="100%" height="100%" fill="#55595c"></rect>
                                    <text x="50%" y="50%" fill="#eceeef" dy=".3em">{{ item.StoreItem.title }}</text>
                                </svg>

                                <div class="card-body">
                                    <p class="card-text">{{ item.StoreItem.description }}</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>Click for look more details on personal item page!</div>
                                        <div class="text-muted text-center">{{ item.StoreItem.price }} $Buckses</div>
                                        {% set sum = sum + item.StoreItem.price %}
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
            <hr>
            <div class="d-inline-flex">
            <h3>Amount Total: {{ sum }} $Buckses</h3>
            <a class="ms-lg-5 btn btn-lg btn-success" href="{{ path('storeOrder') }}" tabindex="-1" aria-disabled="true">Checkout</a>
            </div>
        </div>
    </div>
{% endblock %}
