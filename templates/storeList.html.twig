{% extends 'base.html.twig' %}

{% block title %}Hello Controller!{% endblock %}

{% block body %}
    <main>
        <section class="py-5 text-center container">
            <div class="row py-lg-5">
                <div class="col-lg-6 col-md-8 mx-auto">
                    <h1 class="fw-light">Hello {{ controller_name }}! ✅</h1>
                    <p class="lead text-muted">Something short and leading about the collection below—its contents, the creator, etc. Make it short and sweet, but not too short so folks don’t simply skip over it entirely.</p>
                    <p class="lead text-muted">This friendly message is coming from:</p>
                    <ul class="list-unstyled">
                        <li>Your controller at <code><a href="{{ 'F:/OpenServer/domains/symphony.store/src/Controller/Controller.php'|file_link(0) }}">src/Controller/Controller.php</a></code></li>
                        <li>Your template at <code><a href="{{ 'F:/OpenServer/domains/symphony.store/templates//storeList.html.twig'|file_link(0) }}">templates//storeList.html.twig</a></code></li>
                    </ul>
                    <p>
                        <a href="#" class="btn btn-primary my-2">Main call to action</a>
                        <a href="#" class="btn btn-secondary my-2">Secondary action</a>
                    </p>
                </div>
            </div>
        </section>

        <div class="album py-5 bg-light">
            <div class="container">

                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    {% for item in items %}
                    <div class="col">
                        <a href="{{ path('storeItem', {'id':item.id}) }}" class="text-decoration-none">
                        <div class="card shadow-sm">
                            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
                                <title>{{ item.title }}</title>
                                <rect width="100%" height="100%" fill="#55595c"></rect>
                                <text x="50%" y="50%" fill="#eceeef" dy=".3em">{{ item.title }}</text>
                            </svg>

                            <div class="card-body">
                                <p class="card-text">{{ item.description }}</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>Look more details on personal item page!</div>
                                    <div class="text-muted text-center">{{ item.price }} $Buckses</div>
                                </div>
                            </div>
                        </div>
                        </a>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>

    </main>
{% endblock %}
